<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.ryu.welt_record_23.MainActivity">

    <TextView
        android:text="데시벨 체크하기"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="23dp"
        android:id="@+id/result"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:layout_below="@+id/record"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="NOT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/checkButton"
        android:textAppearance="@style/TextAppearance.AppCompat.Display2"
        android:layout_marginTop="22dp"
        android:layout_below="@+id/result"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/textView2" />

    <TextView
        android:text="10 - 시계 초침"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView2"
        android:layout_alignStart="@+id/textView2"
        android:id="@+id/textView4"
        android:layout_alignEnd="@+id/textView2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView4"
        android:layout_alignStart="@+id/textView4"
        android:id="@+id/textView5"
        android:layout_alignEnd="@+id/textView4"
        android:text="20 - 작게 속삭이는 소리" />

    <TextView
        android:text="30 - 조용한 열람실"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView5"
        android:layout_alignStart="@+id/textView5"
        android:id="@+id/textView6"
        android:layout_alignEnd="@+id/textView5" />

    <TextView
        android:text="40 - 조용한 대화"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView6"
        android:layout_alignStart="@+id/textView6"
        android:id="@+id/textView7"
        android:layout_alignEnd="@+id/textView6" />

    <TextView
        android:text="50 - 보통 소리 대화"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView7"
        android:layout_alignStart="@+id/textView7"
        android:id="@+id/textView8"
        android:layout_alignEnd="@+id/textView7" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView8"
        android:layout_alignStart="@+id/textView8"
        android:id="@+id/textView9"
        android:layout_alignEnd="@+id/textView8"
        android:text="60 - 바쁜 사무실 내부" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView9"
        android:layout_alignStart="@+id/textView9"
        android:id="@+id/textView10"
        android:layout_alignEnd="@+id/textView9"
        android:text="70 - 큰 쇼핑 센터" />

    <TextView
        android:text="80 - 지하철 소음"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView10"
        android:layout_alignStart="@+id/textView10"
        android:textColor="@android:color/holo_red_light"
        android:id="@+id/textView11"
        android:layout_alignEnd="@+id/textView10" />

    <TextView
        android:text="90 - 소음이 심한 공장"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView12"
        android:layout_below="@+id/textView11"
        android:textColor="@android:color/holo_red_dark"
        android:layout_alignEnd="@+id/textView11"
        android:layout_alignStart="@+id/textView11" />

    <TextView
        android:text="0 - 최소 데시벨"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        android:layout_centerVertical="true"
        android:layout_alignStart="@+id/result"
        android:layout_alignEnd="@+id/result" />

    <Button
        android:text="측정"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/record"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true" />

</RelativeLayout>
